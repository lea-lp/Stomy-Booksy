<div class="col-md-4 mb-5">
    <div data-toggle="sticky" data-sticky-offset="100" id="card-profile-sticky">
        <div class="card card-profile border-0 shadow  text-center">

            <% if page_type == 'establishment' %>
            <div class="card-profile-cover">
                <%= image_tag 'background_establishment_card.jpg', class: 'card-img-top', alt: 'card-background' %>
            </div>
            <% if @establishment.avatar.attached? %>
            <a>
                <%= image_tag @establishment.avatar, class: 'card-profile-image avatar shadow', style: 'height: 150px; width: auto', alt: 'card-picture' %>
            </a>
            <% else %>
            <a>
                <%= image_tag 'neutral.jpeg', class: "card-profile-image avatar shadow", alt: 'card-picture-default' %>
            </a>
            <% end %>
            <div class="card-body">
                <div class="mb-3">
                    <h4 class="mb-0">
                        <%= @establishment.name %>
                    </h4>
                    <h6 class="mb-0 pt-3">Téléphone</h6>
                    <span class="btn-inner--icon"><i class="fas fa-phone"></i></span>
                    <span class="text-muted">
                        <%= @establishment.phone %></span>
                    <h6 class="mb-0 pt-3">Email</h6>
                    <span class="btn-inner--icon"><i class="fas fa-envelope"></i></span>
                    <span class="text-muted">
                        <%= @establishment.email %></span>
                </div>
                <% if current_user == @establishment %>
                <div class="pt-4 mt-4 delimiter-top">
                    <div class="btn-group shadow rounded-circle">

                        <%= link_to '<i class="fas fa-pen"></i> &nbsp; Modifier mon profil'.html_safe, edit_establishment_registration_path, class: "btn btn-sm btn-outline-danger btn-circle btn-icon", id: "btn-group-settings"  %></span>
                    </div>
                </div>
                <% end %>
            </div>
            <% elsif page_type == 'teacher' %>
            <div class="card-profile-cover">
                <%= image_tag 'background_teacher_card.jpg', class: 'card-img-top', alt: 'card-background' %>
            </div>
            <% if @teacher.avatar.attached? %>
            <a>
                <%= image_tag @teacher.avatar, class: "card-profile-image avatar shadow", style: "height: 150px; width: auto", alt: 'card-picture' %>
            </a>
            <% else %>
            <a>
                <%= image_tag 'neutral.jpeg', class: "card-profile-image avatar shadow", alt: 'card-picture-default' %>
            </a>
            <% end %>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="mb-0">
                        <%= @teacher.first_name %> <strong>
                            <%= @teacher.last_name %></strong></h6>
                    <h6 class="mb-0 pt-3">Téléphone</h6>
                    <span class="btn-inner--icon"><i class="fas fa-phone"></i></span>
                    <span class="text-muted">
                        <%= @teacher.phone %></span>
                    <h6 class="mb-0 pt-3">Email</h6>
                    <span class="btn-inner--icon"><i class="fas fa-envelope"></i></span>
                    <span class="text-muted">
                        <%= @teacher.email %></span>
                </div>
                <span class="text-muted"><i class="fas fa-map-marker mr-2"></i>
                    <%= @teacher.address %></span>
                <% if current_user == @teacher %>
                <div class="pt-4 mt-4 delimiter-top">
                    <div class="btn-group shadow rounded-circle">
                        <%= link_to '<i class="fas fa-pen"></i> &nbsp; Modifier mon profil'.html_safe, teacher_registration_path, class: "btn btn-sm btn-outline-danger btn-circle btn-icon", id: "btn-group-settings"  %></span>
                    </div>
                </div>
                <% end %>
            </div>
            <% elsif page_type == 'student' %>
            <div class="card-profile-cover">
                <%= image_tag 'background_student_card.jpg', class: 'card-img-top', alt: 'card-background' %>
            </div>
            <% if @student.avatar.attached? %>
            <a>
                <%= image_tag @student.avatar, style: "height: 150px; width: auto", class: "card-profile-image avatar shadow", alt: 'card-picture' %>
            </a>
            <% else %>
            <a>
                <%= image_tag 'neutral.jpeg', class: "card-profile-image avatar shadow", alt: 'card-picture-default' %>
            </a>
            <% end %>

            <div class="card-body">
                <div class="mb-3">
                    <h6 class="mb-0">
                        <%= @student.first_name %> <strong>
                            <%= @student.last_name %></strong></h6>
                    <h6 class="mb-0 pt-3">Téléphone</h6>
                    <span class="btn-inner--icon"><i class="fas fa-phone"></i></span>
                    <span class="text-muted">
                        <%= @student.phone %></span>
                    <h6 class="mb-0 pt-3">Email</h6>
                    <span class="btn-inner--icon"><i class="fas fa-envelope"></i></span>
                    <span class="text-muted">
                        <%= @student.email %></span>
                </div>
                <% if current_user == @student %>
                <div class="pt-4 mt-4 delimiter-top">
                    <div class="btn-group shadow rounded-circle">
                        <%= link_to '<i class="fas fa-pen"></i> &nbsp; Modifier mon profil'.html_safe, edit_student_registration_path, class: "btn btn-sm btn-outline-danger btn-circle btn-icon" %></span>
                    </div>
                </div>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>