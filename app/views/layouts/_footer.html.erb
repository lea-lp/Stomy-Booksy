

<% if current_user %>

<section class="slice-lg bg-transparent footer-rotate" id="footer">


<div class="container">

	<!-- top - logo + navig menu -->
	<div class="row d-flex justify-content-around align-items-center">

		<a href="<%= root_path %>">
			<%= image_tag "logo-row.png", :alt => "logo", style: "width: 180px" -%>
		</a>	

		<!-- user profile menu -->
		<div class="foot-links">
			<% if current_student %>
				<h6 class="heading text-white mb-3">Bienvenue <%= current_student.first_name %></h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon profil</a></li>
					<li><a href="<%= edit_student_registration_path %>">Éditer mon profil</a></li>
					<li><a href="<%= get_dashboard(current_user) %>">Dashboard</a></li>
