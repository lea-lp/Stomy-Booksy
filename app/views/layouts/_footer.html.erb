				<h6 class="heading text-white mb-3">Bienvenue <%= current_teacher.first_name %></h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon profil</a></li>
					<li><a href="<%= edit_teacher_registration_path %>">Éditer mon profil</a></li>
					<li><a href="<%= get_dashboard(current_user) %>">Dashboard</a></li>
				<% elsif current_establishment %>
				<h6 class="heading text-white mb-3">Bienvenue <%= current_establishment.name %></h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon Profil</a></li>
					<li><a href="<%= edit_establishment_registration_path %>">Éditer mon profil</a></li>
					<li><a href="<%= get_dashboard(current_user) %>">Dashboard</a></li>
				<% end %>
			</ul>
		</div>

		<!-- navigation menu -->
		<div class="foot-links">
			<h6 class="heading text-white mb-3">Services</h6>
			<ul class="list-unstyled">
				<li><a href="<%= root_path %>">Tous nous services</a></li>
				<li><a href="<%= teachers_path %>">Tous nous professeur</a></li>
				<li><a href="<%= establishments_path %>">Tous nous établissement</a></li>
			</ul>
		</div>

	</div>

	<!-- bottom - credits + social media -->
	<div class="row align-items-center justify-content-md-between py-4 mt-4 delimiter-top">
		<div class="col-md-6">
			<div class="copyright text-sm font-weight-bold text-center text-md-left">
				<strong>THP Team MONTPELLIER</strong> <a class="font-weight-light">&copy; 2018</a> <a href="https://webpixels.io/" class="font-weight-regular" target="_blank">Webpixels</a>. <a class="font-weight-light">All rights reserved.</a>
			</div>
		</div>
		<div class="col-md-6">
			<ul class="nav justify-content-center justify-content-md-end mt-3 mt-md-0">
				<li class="nav-item">
					<a class="nav-link active" href="https://www.instagram.com/the_hacking_project/" target="_blank">
						<i class="fab fa-instagram"></i>
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="https://github.com/lea-lp/Stomy-Booksy" target="_blank">
