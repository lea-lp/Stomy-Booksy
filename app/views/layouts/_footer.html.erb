				</ul>
			</div>

			<!-- col 2 : user type -->
			<div class="col-lg-3 mb-5 mb-lg-0">

				<!-- student -->
				<% if current_student %>
				<h6 class="heading mb-3">Bienvenue
					<%= current_student.first_name %>
				</h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon profil</a></li>
					<li><a href="<%= edit_student_registration_path %>">Éditer mon profil</a></li>
					<li><a href="<%= get_dashboard(current_user) %>">Dashboard</a></li>
				</ul>

				<!-- teacher -->
				<% elsif current_teacher %>
				<h6 class="heading mb-3">Bienvenue
					<%= current_teacher.first_name %>
				</h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon profil</a></li>
					<li><a href="<%= edit_teacher_registration_path %>">Éditer mon profil</a></li>
					<li><a href="<%= get_dashboard(current_user) %>">Dashboard</a></li>
				</ul>

				<!-- establishment -->
				<% elsif current_establishment %>
				<h6 class="heading mb-3">Bienvenue
					<%= current_establishment.name %>
				</h6>
				<ul class="list-unstyled">
					<li><a href="<%= get_profil(current_user) %>">Mon Profil</a></li>
					<li><a href="<%= edit_establishment_registration_path %>">Éditer mon profil</a></li>
