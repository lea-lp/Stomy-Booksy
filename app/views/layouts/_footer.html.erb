				<ul class="list-unstyled">
					<li><a href="<%= new_establishment_session_path %>">Se connecter</a></li>
					<li><a href="<%= new_establishment_registration_path %>">S'inscrire</a></li>
					<li><a href="#we-do">En savoir plus</a></li>
				</ul>
			</div>

			<% end %>

			<!-- last col (right) : services -->
			<div class="col-lg-3 mb-5 mb-lg-0">
				<h6 class="heading mb-3">Services</h6>
				<ul class="list-unstyled">
					<li><a href="<%= root_path %>">Tous nous services</a></li>
					<li><a href="<%= teachers_path %>">Tous nous professeur</a></li>
					<li><a href="<%= establishments_path %>">Tous nous établissement</a></li>
