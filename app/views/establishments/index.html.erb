<section class="slice-lg bg-transparent" id="top-index-teacher">


  <div class="container mt-5">
    <%if @establishment%>
      <span class="h2 mb-0 d-block">Voici les <%=@teachers.count%> professeurs affiliés à l'établissement <a href="<%=establishment_path(@establishment)%>">"<%=@establishment.name%>"</a></span>
    <%else%>
      <h2 class="text-white">Les Établissements</h4>
      <p class="lead lh-180 text-white">Retrouvez ici tous les intervants inscrits sur AwaBooking !</p>
    <%end%>
    <div class="row">
      <% @establishments.each do |establishment| %>
      <div class="col-lg-3 pt-5">
        <div class="card overflow-hidden" data-animate-hover="2" id="card-index">
          <div class="overflow-hidden">
            <div class="animate-this text-center">
              <% if establishment.avatar.attached? %>
                <%= image_tag establishment.avatar, class: "image-size" %>
              <% else %>
                <a href="<%= establishment_path(establishment) %>">
                  <%= image_tag ("prof2.jpg"), class: "image-size" %>
                </a>
              <% end %>
            </div>
          </div>
          <div class="card-body text-center">
            <h5 class="card-title mb-0"><a href="<%= establishment_path(establishment) %>"><%=establishment.name%></a></h5>
            <p class="text-muted mb-0">
              Services proposés : <%= establishment.services.length %>
            </p>
            <a href="<%=establishment_path(establishment.id)%>">
              <button class="btn btn-sm btn-info btn-circle btn-icon mt-2">
                <span class="btn-inner--text">Voir mon profil</span>
                <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
              </button>
            </a>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <br>
  </div>

</section>

