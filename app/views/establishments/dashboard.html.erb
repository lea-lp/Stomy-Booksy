                  <h6>Dashboard</h6>
                </div>
              </div>
              <div class="list-group list-group-sm list-group-flush">
                <a href="#card-calendar" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-4">
                  <i class="far fa-calendar-alt"></i>
                  <div class="flex-fill pl-3 text-limit">
                    <h6 class="text-sm d-block text-limit m-0">Mon calendrier</h6>
                  </div>
                </a>
                <a href="#card-rdv" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-4">
                    <i class="far fa-calendar-check"></i>
                  <div class="flex-fill pl-3 text-limit">
                    <h6 class="text-sm d-block text-limit m-0">Mes rendez-vous</h6>
                  </div>
                </a>
                <a href="#card-resource-list" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-compress-arrows-alt"></i>
                  <div class="flex-fill pl-3 text-limit">
                    <h6 class="text-sm d-block text-limit m-0">Mes ressources</h6>
                  </div>
                </a>
                <a href="#card-resource-add" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-cogs"></i>
                    <div class="flex-fill pl-3 text-limit">
                      <h6 class="text-sm d-block text-limit m-0">Mes services</h6>
                    </div>
                </a>
                <a href="<%=establishment_path(current_user)%>" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-4">
                    <i class="fas fa-user-circle"></i>
                  <div class="flex-fill pl-3 text-limit">
                    <h6 class="text-sm d-block text-limit m-0">Mon profil</h6>
                  </div>
