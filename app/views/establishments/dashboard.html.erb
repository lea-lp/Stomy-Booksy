                  </tr>
                </thead>
                <tbody class="container">
                  <%@resources.each do |resource|%>
                    <tr class="row">
                      <td class="col-1 pr-2 pb-2 h-25"><span class="font-weight-bold text-sm wrap"><%=resource.id%></span></td>
