                <div class="col-4">
                  <div class="card-icon-actions text-right">
                    <a href="<%=edit_establishment_registration_path%>" class="favorite active" data-toggle="tooltip" data-original-title="Save to favorites"><i class="fas fa-pen"></i></a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- floating menu -->
